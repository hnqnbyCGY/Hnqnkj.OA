
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Add</title>
    <link rel="stylesheet" href="~/layui/css/layui.css" />
    <script src="https://unpkg.com/vue@2.5.16/dist/vue.js"></script>
    <style>
        .edit_block_c{
            margin-top:10px;
        }
    </style>
</head>
<body>
    <div class="ny_content">
        <form action="#" method="post"  class="layui-form">
            <div class="edit_block_c">
                <!--第一行-->
                <div class="layui-form-item">
                    <div class="layui-inline">
                        <label class="layui-form-label">学员姓名</label>
                        <div class="layui-input-inline" style="width:120px;">
                            <input type="text" name="custom_name" class="layui-input" />
                        </div>
                    </div>
                    <div class="layui-inline">
                        <label class="layui-form-label">学员生日</label>
                        <div class="layui-input-inline" style="width:120px;">
                            <input type="text" name="custom_birthday" class="layui-input date_sel" value="2001-01-01" />
                        </div>
                    </div>
                    <div class="layui-inline">
                        <label class="layui-form-label">学员性别</label>
                        <div class="layui-input-block">
                            <input type="radio" name="custom_sex" lay-filter="custom_sex" value="1" title="男" checked />
                            <input type="radio" name="custom_sex" lay-filter="custom_sex" value="0" title="女" />
                        </div>
                    </div>
                </div>
                <!--第二行-->
                <div class="layui-form-item">
                    <div class="layui-inline">
                        <label class="layui-form-label">家长电话</label>
                        <div class="layui-input-inline" style="width:120px;">
                            <input type="text"  name="custom_name" class="layui-input" />
                        </div>
                    </div>
                    <div class="layui-inline">
                        <label class="layui-form-label">其他电话</label>
                        <div class="layui-input-inline" style="width:120px;">
                            <input type="text" name="custom_birthday" class="layui-input"  />
                        </div>
                    </div>
                    <div class="layui-inline">
                        <label class="layui-form-label" >微信号</label>
                        <div class="layui-input-inline" style="width:120px;">
                             <input type="text" name="" class="layui-input"/>
                        </div>
                    </div>
                </div>
                <!--第三行-->
                <div class="layui-form-item">
                    <div class="layui-inline">
                        <label class="layui-form-label">公立学校</label>
                        <div class="layui-input-inline" style="width:120px;">
                            <input type="text" name="custom_name" class="layui-input" />
                        </div>
                    </div>
                    <div class="layui-inline">
                        <label class="layui-form-label">班级年级</label>
                        <div class="layui-input-inline" style="width:120px;">
                            <input type="text" name="custom_birthday" class="layui-input" />
                        </div>
                    </div>
                    <div class="layui-inline">
                        <label class="layui-form-label">居住区域</label>
                        <div class="layui-input-inline" style="width:120px;">
                            <input type="text" name="" class="layui-input" />
                        </div>
                    </div>
                </div>
                <!--第四行-->
                <div class="layui-form-item">
                    <div class="layui-inline">
                        <label class="layui-form-label">咨询课程</label>
                        <div class="layui-input-inline" style="width:202px;">
                            <select name="city" lay-verify="">
                                <option value="010">北京</option>
                                <option value="021" disabled>上海（禁用效果）</option>
                                <option value="0571" selected>杭州</option>
                            </select>
                        </div>
                        <div class="layui-input-inline" style="width:202px;">
                            <select name="city" lay-verify="">
                                <option value="010">北京</option>
                                <option value="021" disabled>上海（禁用效果）</option>
                                <option value="0571" selected>杭州</option>
                            </select>
                        </div>
                        <div class="layui-input-inline" style="width:202px;">
                            <select name="city" lay-verify="">
                                <option value="010">北京</option>
                                <option value="021" disabled>上海（禁用效果）</option>
                                <option value="0571" selected>杭州</option>
                            </select>
                        </div>
                    </div>
                </div>
                <!--第五行-->
                <div class="layui-form-item">
                    <div class="layui-inline">
                        <label class="layui-form-label">客户状态</label>
                        <div class="layui-input-inline" style="width:120px;">
                            <select name="city" lay-verify="">
                                <option value="010">北京</option>
                                <option value="021" disabled>上海（禁用效果）</option>
                                <option value="0571" selected>杭州</option>
                            </select>
                        </div>
                    </div>
                    <div class="layui-inline">
                        <label class="layui-form-label">意向程度</label>
                        <div class="layui-input-inline" style="width:120px;">
                            <select name="city" lay-verify="">
                                <option value="010">北京</option>
                                <option value="021" disabled>上海（禁用效果）</option>
                                <option value="0571" selected>杭州</option>
                            </select>
                        </div>
                    </div>
                    <div class="layui-inline">
                        <label class="layui-form-label">客户来源</label>
                        <div class="layui-input-inline" style="width:120px;">
                            <select name="city" lay-verify="">
                                <option value="010">北京</option>
                                <option value="021" disabled>上海（禁用效果）</option>
                                <option value="0571" selected>杭州</option>
                            </select>
                        </div>
                    </div>
                </div>
                <!--第六行-->
                <div class="layui-form-item">
                    <div class="layui-inline">
                        <label class="layui-form-label">沟通内容</label>
                        <div class="layui-input-inline" style="width:620px;">
                            <textarea name="" required lay-verify="required" placeholder="请输入" class="layui-textarea"></textarea>
                        </div>
                    </div>
                </div>
                <!--第七行-->
                <div class="layui-form-item">
                    <div class="layui-inline">
                        <label class="layui-form-label">所属校区</label>
                        <div class="layui-input-inline" style="width:120px;">
                            <select name="city" lay-verify="">
                                <option value="010">北京</option>
                                <option value="021" disabled>上海（禁用效果）</option>
                                <option value="0571" selected>杭州</option>
                            </select>
                        </div>
                    </div>
                    <div class="layui-inline">
                        <label class="layui-form-label">经办人</label>
                        <div class="layui-input-inline" style="width:120px;">
                            <select name="city" lay-verify="">
                                <option value="010">北京</option>
                                <option value="021" disabled>上海（禁用效果）</option>
                                <option value="0571" selected>杭州</option>
                            </select>
                        </div>
                    </div>
                    <div class="layui-inline">
                        <label class="layui-form-label">咨询日期</label>
                        <div class="layui-input-inline" style="width:120px;">
                            <input type="text" name="custom_birthday" class="layui-input date_sel" value="2001-01-01" />
                        </div>
                    </div>
                </div>
                <!--最后一行-->
                <div class="layui-form-item">
                    <div class="layui-inline">
                        <div class="layui-input-inline">
                            <input type="button" class="layui-btn"  value="立即提交"/>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
    <script src="~/layui/layui.all.js"></script>
    <script>
        layui.use('laydate', function () {
            var laydate = layui.laydate;
            //执行一个laydate实例
            laydate.render({
                elem: '.date_sel' //指定元素
            });
        });
    </script>
</body>
</html>
