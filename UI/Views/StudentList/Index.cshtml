        <div class="layui-row layui-bg-gray">
            <div class="layui-row">
                <label class="layui-form-label">单行输入框</label>
                <div class="layui-input-block">
                    <input type="text" name="title" lay-verify="title" autocomplete="off" placeholder="请输入标题" class="layui-input">
                </div>
            </div>
            <div class="layui-row">

                <button class="layui-btn" v-on:click="ShowAdd"><i class="layui-icon layui-icon-add-1"></i>  添加</button>
            </div>
        </div>
        <table class="layui-hide" id="test"></table>
    </div>
    
    <script src="~/layui/layui.js"></script>
    <!-- 注意：如果你直接复制所有代码到本地，上述js路径需要改成你本地的 -->
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script>
        layui.use('element', function () {
            var element = layui.element;
            var $ = layui.$;
        });
        layui.use('layer', function () {
            var layer = layui.layer;
            layer.msg('hello');
        });   
        new Vue({
            el: "#app",
            methods: {
                ShowAdd() {
                    layui.layer.open({
                          type:2
                        , title: '添加学生'
                        , content: 'StudentList/Add' //这里content是一个URL，如果你不想让iframe出现滚动条，你还可以content: ['http://sentsin.com', 'no']
                        , area: ['850px', '580px']
                        , offset: ['20px', '200px']
                    }); 
                }
            }
        });
        

